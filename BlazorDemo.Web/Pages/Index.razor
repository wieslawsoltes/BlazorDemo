@page "/"

<Dialogs @ref=_dialogs />

<AvaloniaView />

@code {

    private Dialogs? _dialogs;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender && _dialogs is { })
        {
            Avalonia.AvaloniaLocator.CurrentMutable.Bind<IDialogService>().ToConstant(_dialogs);
        }
        base.OnAfterRender(firstRender);
    }
}